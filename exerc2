/* exercicio 2 */

<?php
  class Animal{
    public $nome;
    public $idade;
    public $som;

    public function EmitirSom(){
      echo "O som que o animal emite é $this->som";
    }

    public function setsom($som){
      $this->som=$som;
    }

    public function setnome($nome){
      $this->nome=$nome;
    }

    public function setidade($idade){
      $this->idade=$idade;
    }

    public function getsom(){
      return $this->som;
    }

    public function getnome(){
      return $this->nome;
    }

    public function getidade(){
      return $this->idade;
    }


  }

  class Cachorro extends Animal{
    public function Correr(){
      echo "Correndo";
    }

    }
  
  class Cavalo extends Animal{
    public function Correr(){
      echo "Correndo";
    }
  }

  class Preguica extends Animal{
    public function SobeNaArvore(){
      echo "Subindo na árvore";
    }
  }

  $cachorro = new Cachorro();
  $cachorro->nome = "Totó";
  $cachorro->idade = "3 anos";
  $cachorro->setsom ("au! au!");
  $cachorro->EmitirSom();
  echo "\n";

  $cavalo = new Cavalo();
  $cavalo->nome = "Zorro";
  $cavalo->idade = "10 anos";
  $cavalo->setsom("iiiiin hihihii");
  $cavalo->EmitirSom();
  echo "\n";


  $preguica = new Preguica();
  $preguica->nome = "Finnick";
  $preguica->idade = "1 ano";
  $preguica->setsom("zzzzz");
  echo $preguica->EmitirSom();
  echo "\n";
  
?>
