/* exercicio 2 */

<?php
  class Animal{
    public $nome;
    public $idade;
    public $som;

  }

  class Cachorro extends Animal{
    public function Correr(){
      echo "Correndo";
    }

    }
  

  class Cavalo extends Animal{
    public function Correr(){
      echo "Correndo";
    }
  }

  class Preguica extends Animal{
    public function SobeNaArvore(){
      echo "Subindo na árvore";
    }
  }

  $cachorro = new Cachorro();
  $cachorro->nome = "Totó";
  $cachorro->idade = "3 anos";
  $cachorro->som = "Au! Au!";
  $cachorro->Correr();

  $cavalo = new Cavalo();
  $cavalo->nome = "Zorro";
  $cavalo->idade = "10 anos";
  $cavalo->som = "som do relincho";
  $cavalo->Correr();

  $preguica = new Preguica();
  $preguica->nome = "Finnick";
  $preguica->idade = "1 ano";
  $preguica->som = "zzzzz";
  $preguica->SobeNaArvore();
  
?>
